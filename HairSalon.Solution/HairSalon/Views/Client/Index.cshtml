@using HairSalon.Models;

<div class="border">
  <h1>All Clients</h1>

  @if (@Model.Count == 0)
  {
    <h3>No clients have been added.</h3>
  }

  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Name}", "Show", new { id = client.StylistId })</li>
    }
  </ul>

  <p>@Html.ActionLink("Add a new client", "Create", "Client")</p>
   <p class="hypbutton">@Html.ActionLink("Go Home", "Index", "Home")</p>

</div>