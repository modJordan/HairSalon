@using HairSalon.Models;
@model Client;

<div class="border">
  <h1> Add a new Client</h1>
  
  @using (Html.BeginForm())
  {

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Contact)
    @Html.TextBoxFor(model => model.Contact)

    @Html.DropDownListFor(model => model.StylistId, (SelectList)ViewBag.StylistId, "Select Stylist")


    <input type="submit" value="Create" />
  }

  <p>@Html.ActionLink("Show all Stylists", "Index", "Stylist")</p>
   <p class="hypbutton">@Html.ActionLink("Go Home", "Index", "Home")</p>

</div>
